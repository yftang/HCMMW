<div class="profile" summary="Profile information">
  <div class="profile-header">
    <div class="name">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </div>
    <div class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Experiments</strong> <%= @user.experiments.count %>
    </div>
  </div>
  <hr />
  <div class="profile-body">
    <div colspan="2">
      <% if current_user.admin? %>
        <h3><%= link_to 'Manage users', users_path %></h3>
      <% else %>
        <% if @user.experiments.empty? %>
          <h3>
            <%= link_to 'Start your first experiment', '/experiments/new' %>
          </h3>
        <% else %>
          <h3><%= link_to 'New experiment', '/experiments/new' %></h3>
          <table class="experiments" summary="User experiments">
            <%= render @experiments %>
          </table>
          <%= will_paginate @experiments %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
